<xml>
    <include name="build_libs.xml" />

    <set name="DIRECTORY" value="${SOURCE_DIR}/cpp/" />

    <section if="ENABLED_GLAD">
        <set name="TARGET_DIR" value="${LIBS_DIR}/glad/include" />
        <compilerflag value="-DENABLED_GLAD" />
    </section>

    <files id='haxe'>
        <compilervalue name="-I" value="${TARGET_DIR}/" />
        <compilervalue name="-I" value="${DIRECTORY}/" />
    </files>

    <target id="haxe">
        <vflag name="-framework" value="OpenGL" if="ios"/>
	    <vflag name="-framework" value="Cocoa" if="macos || ios"/>
    </target>
</xml>